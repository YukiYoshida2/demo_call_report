<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.yukiyoshida.demo-call-report</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>/Users/yukiyoshida/Desktop/demo_call_report/scripts/run-local.sh</string>
        <string>--scheduled</string>
    </array>

    <key>WorkingDirectory</key>
    <string>/Users/yukiyoshida/Desktop/demo_call_report</string>

    <!-- 毎日 19:00（ローカルタイムゾーン = JST）に実行 -->
    <!-- 土日・祝日のスキップはスクリプト内の --scheduled フラグで処理 -->
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>19</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <!-- launchd は最小環境のため PATH を明示指定 -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/Users/yukiyoshida/.local/bin:/Library/Frameworks/Python.framework/Versions/3.13/bin:/opt/homebrew/bin:/opt/homebrew/sbin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
        <key>HOME</key>
        <string>/Users/yukiyoshida</string>
        <key>LANG</key>
        <string>ja_JP.UTF-8</string>
    </dict>

    <!-- ログ出力先 -->
    <key>StandardOutPath</key>
    <string>/Users/yukiyoshida/Desktop/demo_call_report/logs/launchd-stdout.log</string>
    <key>StandardErrorPath</key>
    <string>/Users/yukiyoshida/Desktop/demo_call_report/logs/launchd-stderr.log</string>

    <!-- 失敗時に再起動しない -->
    <key>KeepAlive</key>
    <false/>

    <!-- タイムアウト: 45分 -->
    <key>TimeOut</key>
    <integer>2700</integer>
</dict>
</plist>
